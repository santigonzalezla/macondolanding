---
interface Props {
    ratings: number;
    comment: string;
    image: string;
    name: string;
    description: string;
    position: string;
}

const { ratings, comment, image, name, description, position } = Astro.props;

---

<div class={`card ${position}`}>
    <div class="ratings">

    </div>
    <div class="comment">
        {comment}
    </div>
    <div class="profile">
        <div class="image">
            <img src={image} alt="profile image">
        </div>
        <div class="info">
            <h3>{name}</h3>
            <h5>{description}</h5>
        </div>
    </div>
</div>

<style>
    .card
    {
        width: 300px;
        height: 465px;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 30px 20px;
    }

    .comment
    {
        font-weight: 300;
    }

    .first
    {
        background: #FBF52099;
    }

    .second
    {
        background: #3D77A499;
        margin-top: -30px;
        margin-bottom: 30px;
    }

    .third
    {
        background: #E48E3099;
    }

    .profile
    {
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 10px;
    }

    .image
    {
        border-radius: 50%;
        width: 40px;
        height: 40px;
    }

    .image img
    {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    @media screen and (max-width: 768px) and (max-width: 1024px)
    {
        .first,
        .second,
        .third
        {
            margin-top: 30px;
        }
    }
</style>